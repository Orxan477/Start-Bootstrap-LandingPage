@model Information
@{
    ViewData["Title"] = "Create";
}

<row>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body mt-5">
                <h4 class="card-title">Update</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Head"></label>
                        <input asp-for="Head" class="form-control" placeholder="Head">
                        <span class="text-danger" asp-validation-for="Head"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <input asp-for="Content" class="form-control" placeholder="Content">
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</row>

